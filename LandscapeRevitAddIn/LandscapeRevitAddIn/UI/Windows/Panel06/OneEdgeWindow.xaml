<!-- UI/Windows/Panel06/OneEdgeWindow.xaml -->
<Window x:Class="LandscapeRevitAddIn.UI.Windows.Panel06.OneEdgeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XD Landscape - Align Floor Edges to Reference Edge" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="White"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Same style resources as other windows -->
        <LinearGradientBrush x:Key="LogoGradientBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#B8D4C0" Offset="0"/>
            <GradientStop Color="#A8C9B3" Offset="0.3"/>
            <GradientStop Color="#8FBB9A" Offset="0.6"/>
            <GradientStop Color="#7AAE85" Offset="0.8"/>
            <GradientStop Color="#6BA177" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="CardBackground" Color="#FEFEFE" Opacity="0.95"/>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A7C5A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D6349"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A8C6A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3A5C45"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#2D5D3A"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A7C5A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="#C8DDD0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.15" Color="#4A7C5A"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource LogoGradientBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Margin="20,20,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Width="72" Height="72" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Border.Background>
                        <ImageBrush x:Name="LogoBrush" Stretch="Uniform"/>
                    </Border.Background>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="XD Landscape" FontSize="24" FontWeight="Bold" Foreground="#2D5D3A" Margin="0,0,0,5"/>
                    <TextBlock Text="Align Floor Edges to Reference Edge" FontSize="14" Foreground="#4A7C5A"/>
                    <TextBlock Text="Select floor edges and align them to a reference edge direction" FontSize="11" Foreground="#5A8C6A" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Selection Area -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="20,10,20,10">
            <StackPanel>
                <TextBlock Text="Selection" FontSize="16" FontWeight="SemiBold" Foreground="#2D5D3A" Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Floor Edges -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Floor Edges to Align:" FontSize="12" Foreground="#4A7C5A" Margin="0,0,0,10"/>
                        <Button Name="SelectFloorEdgesButton" Content="📐 Select Floor Edges" Style="{StaticResource ModernButton}" Height="40" Click="SelectFloorEdgesButton_Click"/>
                        <TextBlock Name="SelectedEdgesTextBlock" Margin="0,8,0,0" Text="Click to select floor edges to align" Foreground="#5A8C6A" FontStyle="Italic"/>
                    </StackPanel>

                    <!-- Reference Edge -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Reference Edge:" FontSize="12" Foreground="#4A7C5A" Margin="0,0,0,10"/>
                        <Button Name="SelectReferenceEdgeButton" Content="🎯 Select Reference Edge" Style="{StaticResource ModernButton}" Height="40" Click="SelectReferenceEdgeButton_Click" IsEnabled="False"/>
                        <TextBlock Name="ReferenceEdgeTextBlock" Margin="0,8,0,0" Text="Select floor edges first, then choose reference" Foreground="#5A8C6A" FontStyle="Italic"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Alignment Options -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Margin="20,10,20,10">
            <StackPanel>
                <TextBlock Text="Edge Alignment Options" FontSize="16" FontWeight="SemiBold" Foreground="#2D5D3A" Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <CheckBox Name="MaintainLengthCheckBox" Content="Maintain Edge Length" IsChecked="True" Foreground="#4A7C5A" FontSize="12" Margin="0,0,0,10"/>
                        <CheckBox Name="ProjectOntoReferenceCheckBox" Content="Project onto Reference Direction" IsChecked="False" Foreground="#4A7C5A" FontSize="12"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Alignment Tolerance:" FontSize="12" Foreground="#4A7C5A" Margin="0,0,0,5"/>
                        <TextBox Name="ToleranceTextBox" Text="0.1" Height="30" VerticalContentAlignment="Center" Padding="8"/>
                        <TextBlock Text="Maximum alignment deviation" FontSize="10" Foreground="#7AAE85" Margin="0,5,0,0" FontStyle="Italic"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Style="{StaticResource Card}" Margin="20,10,20,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Name="SummaryTextBlock" FontWeight="SemiBold" FontSize="14" Foreground="#2D5D3A" Text="Select floor edges and reference edge to continue"/>
                    <TextBlock Text="Selected edges will be aligned to match the reference edge direction" FontSize="11" Foreground="#4A7C5A" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Name="CancelButton" Content="Cancel" Style="{StaticResource ModernButton}" Width="90" Height="38" Margin="0,0,12,0" Click="CancelButton_Click"/>
                    <Button Name="AlignButton" Content="📐 Align to Edge" Style="{StaticResource PrimaryButton}" Width="130" Height="38" Click="AlignButton_Click" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>